# prev tmux window
keybind = cmd+p=text:\x07\x70

# jump to tmux window
keybind = cmd+i=text:\x07\x57

# jump to tmux session
keybind = cmd+o=text:\x07\x53

# comment in vim (,c)
keybind = cmd+/=text:\x2c\x63

