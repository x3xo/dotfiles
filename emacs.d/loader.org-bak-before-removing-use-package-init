         (setq org-confirm-babel-evaluate nil)
         (setq org-src-fontify-natively t)
         (setq org-src-tab-acts-natively t)
         (setq org-log-done t)



  (setq org-file-apps
    '((auto-mode . emacs)
      ("\\.mm\\'" . default)
      ("\\.x?html?\\'" . default)
      ("\\.pdf\\'" . default)
      ("\\.jpg\\'" . "open %s")))
         ;; open sourde edit in same window instead of split (C-c ')
